<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ufirstStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="Aditya \nShigwan"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/uattend1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/update1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Update" />

            <Button
                android:id="@+id/delete_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Delete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/usecondStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashwin A"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/uattend2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/update2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Update" />

            <Button
                android:id="@+id/delete_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Delete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uthirdStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad \nJasim"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/uattend3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/update3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginLeft="5dp"
                />

            <Button
                android:id="@+id/delete_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Delete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="4"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uforthStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noufiya \nNazarin"
                android:inputType="textMultiLine"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/uattend4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/update4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Update" />

            <Button
                android:id="@+id/delete_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Delete" />
        </TableRow>

    </TableLayout>
</LinearLayout>
